#!/usr/bin/env node
var Chalk = require('chalk');
var CLI = require('../lib/cli');


// Run the library
CLI.run().then(function (response) {

    var code = 0;

    if (Array.isArray(response)) {
        code = response[1];
        response = response[0];
    }

    console.log(response);
    process.exit(code);
}).catch(function (err) {

    console.error(Chalk.red('>> ') + 'ERROR:', err.data ? err.data.message : err.message);
    process.exit(1);
});
